    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/server.js",
            "env": {
                "NODE_ENV": "dev",
                "DBHOST": "localhost",
                "DBPORT": "27017"
            }
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "env": {
                "NODE_ENV": "dev",
                "NODE_PORT": "8443",
                "DBHOST": "localhost",
                "DBPORT": "27017",
                "DBNAME": "test",
            },
            "args": [
                "--timeout",
                "60000",
                "--exit",
                "--reporter",
                "spec",
                "${workspaceFolder}/test/**/*.tests.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
